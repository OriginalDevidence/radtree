<?xml version="1.0" encoding="UTF-8"?>
    <web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <description>Proyecto medioambiental de la Universidad de Zaragoza</description>
    <display-name>RadTree</display-name>
	<!-- ================ Mapeo JSP =============== -->
	<servlet>
	    <servlet-name>Registro</servlet-name>
	    <jsp-file>/registro.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>Registro</servlet-name>
	    <url-pattern>/registro</url-pattern>
	</servlet-mapping>
    <!-- ================ Filtros ================ -->
    <filter>
		<filter-name>UsuarioLogueado</filter-name>
		<filter-class>sistinfo.filters.UsuarioLogueadoFilter</filter-class>
		<init-param>
			<param-name>my-param</param-name>
			<param-value>my-param-value</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>UsuarioLogueado</filter-name>
		<url-pattern>/inicioSesion.jsp</url-pattern>
	</filter-mapping>
    <!-- ================ Servlets ================ -->
    <servlet>
        <servlet-name>RegistrarUsuario</servlet-name>
        <servlet-class>sistinfo.servlets.usuario.RegistrarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>sistinfo.servlets.usuario.IniciarSesionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>sistinfo.servlets.usuario.CerrarSesionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarUsuario</servlet-name>
        <servlet-class>sistinfo.servlets.usuario.EditarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarUsuario</servlet-name>
        <servlet-class>sistinfo.servlets.usuario.EliminarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearNoticia</servlet-name>
        <servlet-class>sistinfo.servlets.contenido.CrearNoticiaServlet</servlet-class>
	</servlet>
    <servlet>
        <display-name>CrearPregunta Name</display-name>
        <servlet-name>CrearPregunta</servlet-name>
        <servlet-class>sistinfo.servlets.contenido.CrearPreguntaServlet</servlet-class>
	</servlet>
    <servlet>
        <servlet-name>CrearReto</servlet-name>
        <servlet-class>sistinfo.servlets.contenido.CrearRetoServlet</servlet-class>
	</servlet>
    <servlet>
        <servlet-name>EnviarComentario</servlet-name>
        <servlet-class>sistinfo.servlets.contenido.EnviarComentarioServlet</servlet-class>
	</servlet>
    <!-- ============ Servlets Mapping======= -->
    <servlet-mapping>
        <servlet-name>RegistrarUsuario</servlet-name>
        <url-pattern>/RegistrarUsuario.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/IniciarSesion.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarUsuario</servlet-name>
        <url-pattern>/EditarUsuario.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarUsuario</servlet-name>
        <url-pattern>/EliminarUsuario.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
	    <servlet-name>CrearNoticia</servlet-name>
		<url-pattern>/CrearNoticia.do</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
	    <servlet-name>CrearPregunta</servlet-name>
		<url-pattern>/CrearPregunta.do</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
	    <servlet-name>CrearReto</servlet-name>
		<url-pattern>/CrearReto.do</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnviarComentario</servlet-name>
		<url-pattern>/EnviarComentario.do</url-pattern>
	</servlet-mapping>
    <!-- ============ Welcome page ========= -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>